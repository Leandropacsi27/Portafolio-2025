---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import Spring from "./icons/Spring.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  SPRING: {
    name: "Spring Boot",
    class: "bg-[#6DB33F] text-white",
    icon: Spring, // Temporarily using GitHub icon, consider adding Spring icon
  },
  ANGULAR: {
    name: "Angular",
    class: "bg-[#DD0031] text-white",
    icon: GitHub, // Temporarily using GitHub icon, consider adding Angular icon
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },

  HTML: {
    name: "HTML5",
    class: "bg-[#E34F26] text-white",
    icon: GitHub,
  },
};
const PROJECTS = [
  {
    title: "Sistema de Gestión de Citas Médicas",
    description:
      "Implementé un sistema full stack para el registro de pacientes, doctores y citas.Desarrollé el backend con Spring Boot, utilizando.controladores REST, repositorios JPA y base de datos MySQL.Diseñé el frontend con Angular, aplicando routing, componentes reutilizables y servicios HTTP. Apliqué principios de arquitectura MVC y buenas prácticas de desarrollo.",
    // link: "https://svgl.vercel.app/",
    github:
      "https://github.com/Leandropacsi27/Sistema-de-Gestion-de-Citas-Medicas",
    image: "projects/citas-medicas.webp",
    tags: [TAGS.SPRING, TAGS.ANGULAR],
  },
  {
    title: "Landing Page Citas Medicas",
    description:
      "Pagina oficial de Citas Médicas, elaborado con HTML, Bootstrap y CSS personalizado. Con secciones informativas y formulario de contacto para facilitar la interacción con los usuarios.",
    github: "https://github.com/Leandropacsi27/MarcosDW",
    link: "https://leandropacsi27.github.io/MarcosDW/",
    image: "projects/lading-citas.png",
    tags: [TAGS.HTML, TAGS.TAILWIND],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt={title}
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={`${import.meta.env.BASE_URL}/${image}`}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
